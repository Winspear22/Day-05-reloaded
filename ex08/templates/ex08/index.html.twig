{% extends "base.html.twig" %}

{% block title %}Exercise 08 - Database Relations{% endblock %}

{% block content %}
    <h1>Exercise 08 - Create Database Relations</h1>

    <h2>1. Create Tables</h2>
    <form method="POST" action="{{ path('ex08_create_persons_table') }}">
        <button type="submit">Create Persons Table</button>
    </form>
    <form method="POST" action="{{ path('ex08_create_bank_accounts_table') }}">
        <button type="submit">Create Bank Accounts Table</button>
    </form>
    <form method="POST" action="{{ path('ex08_create_addresses_table') }}">
        <button type="submit">Create Addresses Table</button>
    </form>

    <h2>2. Alter Persons Table</h2>
    <form method="POST" action="{{ path('ex08_add_marital_status') }}">
        <button type="submit">Add Marital Status</button>
    </form>
    <form method="POST" action="{{ path('ex08_remove_marital_status') }}">
        <button type="submit">Remove Marital Status</button>
    </form>

    <h2>3. Create Relations</h2>
    <form method="POST" action="{{ path('ex08_create_relation_bank_account') }}">
        <button type="submit">Create Bank Accounts ↔ Persons (1:1)</button>
    </form>
    <form method="POST" action="{{ path('ex08_create_relation_addresses') }}">
        <button type="submit">Create Addresses ↔ Persons (1:N)</button>
    </form>

    <h2>Order of Operations</h2>
    <ol>
        <li>Create Persons table</li>
        <li>Create Bank Accounts table</li>
        <li>Create Addresses table</li>
        <li>Add Marital Status (optional)</li>
        <li>Create Bank Accounts ↔ Persons relation (1:1 with UNIQUE)</li>
        <li>Create Addresses ↔ Persons relation (1:N with NOT NULL)</li>
    </ol>

{% endblock %}

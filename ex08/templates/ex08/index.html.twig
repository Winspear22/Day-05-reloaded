{# templates/ex08/index.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Exercise 08 - Database Relations{% endblock %}

{% block content %}
<div class="container mt-5">
    <h1>Exercise 08 - Create Database Relations</h1>
    
    <!-- Afficher les flash messages -->
    {% for type, messages in app.flashes %}
